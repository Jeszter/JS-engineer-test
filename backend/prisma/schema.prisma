generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Quiz {
  id        String   @id @default(uuid())
  title     String
  questions Question[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Question {
  id         String   @id @default(uuid())
  quizId     String
  quiz       Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  text       String
  type       QuestionType
  options    Json?
  correctAnswer Json?
  order      Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum QuestionType {
  BOOLEAN
  INPUT
  CHECKBOX
}
